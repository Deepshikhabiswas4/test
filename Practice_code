import os
import logging
from datetime import datetime


def create_logger(run_id):
    today_str = datetime.today().strftime("%Y-%m-%d")

    log_dir = "/app/logs"
    os.makedirs(log_dir, exist_ok=True)

    log_file = f"{log_dir}/cbsbalance_{today_str}_run_{run_id}.log"

    logger_name = f"CBS_BALANCE_{run_id}"
    logger = logging.getLogger(logger_name)
    logger.setLevel(logging.INFO)
    logger.propagate = False

    formatter = logging.Formatter(
        "%(asctime)s | %(levelname)s | run_id=%(run_id)s | %(message)s"
    )

    if not logger.handlers:
        file_handler = logging.FileHandler(log_file)
        file_handler.setFormatter(formatter)
        logger.addHandler(file_handler)

    return logging.LoggerAdapter(logger, {"run_id": run_id})

